<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Hàng chứa các thread -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Thread 1 UI Elements -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvThread1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thread 1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnThread1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start/Stop 1" />
        </LinearLayout>

        <!-- Thread 2 UI Elements -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvThread2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thread 2"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnThread2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start/Stop 2" />
        </LinearLayout>

        <!-- Thread 3 UI Elements -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvThread3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thread 3"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnThread3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start/Stop 3" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
